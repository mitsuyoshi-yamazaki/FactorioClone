{
  "name": "factorio-clone",
  "version": "0.1.0",
  "description": "Factorioクローンゲーム - NextJS + TypeScript + PIXI.js + ECS実装",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern='(lib|app).*\\.test\\.(ts|tsx)$'",
    "test:integration": "jest --testPathPattern='tests/integration'",
    "test:e2e": "playwright test",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:e2e",
    "test:report": "yarn test:all --reporter=json > test-results.json"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "pixi.js": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@eslint/js": "^9.0.0",
    "@eslint/eslintrc": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.19",
  "author": "Factorio Clone Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/factorio-clone.git"
  },
  "keywords": [
    "game",
    "factorio",
    "nextjs",
    "react",
    "typescript",
    "pixi.js",
    "ecs",
    "automation",
    "crafting"
  ]
}